<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_holder"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail_title_txt"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:hint="title" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail_addr_txt"
                android:layout_below="@+id/detail_title_txt"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="address" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/distance_txt"
                android:layout_below="@+id/detail_addr_txt"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Calculating..." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/distance_txt"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="38dp"
                    app:srcCompat="@drawable/call_icon"
                    android:id="@+id/call_btn"
                    android:maxHeight="2dp"
                    android:maxWidth="2dp" />

                <EditText
                    android:hint="Phone Number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_num_txt"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:inputType="phone" />

            </LinearLayout>


        </RelativeLayout>



        <fragment
            android:id="@+id/map"
            android:layout_below="@+id/detail_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.MapFragment" />

    </RelativeLayout>
</FrameLayout>